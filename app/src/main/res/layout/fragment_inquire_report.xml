<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp">

    <TextView
        android:text="우리동네 PC방에 등록되지 않았거나 잘못 등록된 PC방을 제보해 주세요. 제보해 주신분 들 중 추첨을 통해서 소정의 선물 (기프티콘)을 드립니다."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginBottom="16dp"
        android:gravity="fill" />

    <TextView
        android:text="매장 이름"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10a"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edttxtInquirePCCafeName"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="매장 주소"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10b"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edttxtInquirePCCafeAddress"
        android:hint="(예) 서울시 서초구 사평대로 57 A타워 2층"
        android:layout_marginBottom="16dp" />


    <TextView
        android:text="요금 정보"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10c"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextd"
        android:hint="(예) 시간당 천원 후불, 정액 10시간 만원"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="시설 정보"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10e"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:text="카드결제"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxf"
            android:layout_weight="1" />

        <CheckBox
            android:text="푸드카페"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2g"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:text="프린터"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxh"
            android:layout_weight="1" />

        <CheckBox
            android:text="스팀게임"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2i"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:text="기계식 키보드"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxj"
            android:layout_weight="1" />

        <CheckBox
            android:text="휴대폰 충전"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2k"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <CheckBox
            android:text="주차가능"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:layout_weight="1" />

        <CheckBox
            android:text="와이파이"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:layout_weight="1" />
    </LinearLayout>


    <TextView
        android:text="기타 정보 / 설명"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10l"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edttxtInquireOtherMsg"
        android:inputType="textMultiLine"
        android:layout_marginBottom="16dp" />


    <TextView
        android:text="(선택) 경품을 받고 싶으시면 연락처를 입력해주세요."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginBottom="25dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btninfoaddbg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:text="보내기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>

    </ScrollView>