<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_weight="3.6"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="0dp">

        <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:id="@+id/pbarPCCafeTnil"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgPCCafeTnil"
            android:src="@drawable/noimage"
            android:layout_width="90dp"
            android:layout_height="90dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="9">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:text="평점"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPCCafeRatingTitle"
                android:textSize="11sp"
                android:textColor="@color/colorDisabled"
                />

            <TextView
                android:id="@+id/txtPCCafeRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="없음"
                android:textSize="12sp" />

            <TextView
                android:text="리뷰 수"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPCCafeReviewTitle"
                android:textSize="11sp"
                android:textColor="@color/colorDisabled"
                android:layout_marginLeft="7dp"
                />

            <TextView
                android:id="@+id/txtPCCafeReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="없음"
                android:textSize="12sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right">

                <TextView
                    android:text="거리"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPCCafeDistanceTitle"
                    android:textSize="11sp"
                    android:textColor="@color/colorDisabled" />

                <TextView
                    android:text="100km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPCCafeDistance"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="불피 PC방"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPCCafeTitle"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:text="서울시 서초구 반포4동 궁전아파트 다같이원"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPCCafeAddress"
            android:layout_marginTop="2dp"
            android:textSize="11sp" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="좌석정보"
                android:id="@+id/txtPCCafeInfoSeat"
                android:textAllCaps="false"
                android:background="@drawable/bg_list_att_active"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:textColor="@color/colorPrimaryAccent"
                android:layout_marginRight="3dp"
                android:textStyle="bold"
                android:textSize="9sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="카드결제"
                android:id="@+id/txtPCCafeInfoCard"
                android:textAllCaps="false"
                android:background="@drawable/bg_list_att_active"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:textColor="@color/colorPrimaryAccent"
                android:layout_marginRight="3dp"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:textSize="9sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="푸드카페"
                android:id="@+id/txtPCCafeInfoFood"
                android:textAllCaps="false"
                android:background="@drawable/bg_list_att_active"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:textSize="9sp"
                android:textColor="@color/colorPrimaryAccent"
                android:layout_marginRight="3dp"
                android:layout_alignParentTop="true"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="프린터"
                android:id="@+id/txtPCCafeInfoPrinter"
                android:textAllCaps="false"
                android:background="@drawable/bg_list_att_active"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:textSize="9sp"
                android:textColor="@color/colorPrimaryAccent"
                android:layout_marginRight="3dp"
                android:layout_alignParentTop="true"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="스팀"
                android:id="@+id/txtPCCafeInfoSteam"
                android:textAllCaps="false"
                android:background="@drawable/bg_list_att_active"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:textSize="9sp"
                android:textColor="@color/colorPrimaryAccent"
                android:layout_alignParentTop="true"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>